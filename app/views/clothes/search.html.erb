<h2>投稿一覧</h2>

<!--タグリスト-->
<% @tag_list.each do |list| %>
  <span>
    <%= link_to list.tag_name, tag_posts_path(post_tag_id: list.id) %>
    <%= list.clothes.count %>
  </span>
<% end %>
<br>
<!--タグによって絞り込んだ投稿一覧-->
<h5>
  タグが ─ <strong><%= @tag.tag_name %></strong>─ の投稿一覧
</h5>
<br>
<% @clothes.each do |clothe| %>
  <%= link_to clothe.content, clothe %>
<% end %>
<br>
